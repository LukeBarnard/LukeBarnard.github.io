	keywords = {ionosphere, Instruments and techniques, instruments and techniques, Ionosphere},
	pages = {1979--1992},
}

@article{Barnard2015a,
	title = {Differences between the {CME} fronts tracked by an expert, an automated algorithm, and the {Solar} {Stormwatch} project},
	volume = {13},
	issn = {15427390},
