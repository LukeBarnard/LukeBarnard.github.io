	journal = {Solar Physics},
	author = {Owens, Mathew J. and Chakraborty, Nachiketa and Turner, Harriet and Lang, Matthew and Riley, Pete and Lockwood, Mike and Barnard, Luke A. and Chi, Yutian},
	month = jul,
	year = {2022},
	keywords = {Coronal mass ejections, Magnetosphere, geomagnetic disturbances, Solar cycle, Solar wind, Solar wind, disturbances},
	pages = {83},
	file = {Full Text PDF:C\:\\Users\\yq904481\\Zotero\\storage\\ISSI3JDG\\Owens et al. - 2022 - Rate of Change of Large-Scale Solar-Wind Structure.pdf:application/pdf},
