@article{scott_using_2019,
	title = {Using {Ghost} {Fronts} {Within} {STEREO} {Heliospheric} {Imager} {Data} to {Infer} the {Evolution} in {Longitudinal} {Structure} of a {Coronal} {Mass} {Ejection}},
