@article{Owens2020,
	title = {A {Computationally} {Efficient}, {Time}-{Dependent} {Model} of the {Solar} {Wind} for {Use} as a {Surrogate} to {Three}-{Dimensional} {Numerical} {Magnetohydrodynamic} {Simulations}},
